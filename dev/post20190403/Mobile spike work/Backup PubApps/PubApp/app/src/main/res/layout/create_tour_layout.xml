<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView_orangeBackground"
        android:layout_width="336dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView_blackBackground"
        android:layout_width="317dp"
        android:layout_height="66dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imageView_pubImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView_blackBackground"
        android:layout_marginStart="44dp"
        app:srcCompat="@mipmap/spoons_foreground" />

    <TextView
        android:id="@+id/textView_LocationName"
        android:layout_width="209dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:layout_toStartOf="@+id/btn_goUp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_goUp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_goDown"
        android:layout_marginTop="54dp"
        android:background="@color/colorPrimary"
        android:text="^"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_goDown"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/imageView_pubImage"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        android:background="@color/colorPrimary"
        android:text="Ë…" />

</RelativeLayout>