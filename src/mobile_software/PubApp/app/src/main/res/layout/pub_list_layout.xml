<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/textView_orangeBackground"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/textView_blackBackground"
        android:layout_width="352dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/imageView_pubImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="47dp"
        app:srcCompat="@mipmap/spoons_foreground" />

    <TextView
        android:id="@+id/textView_LocationName"
        android:layout_width="209dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView_blackBackground"
        android:layout_marginStart="103dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_pubDescription"
        android:layout_width="217dp"
        android:layout_height="59dp"
        android:layout_alignBottom="@+id/textView_blackBackground"
        android:layout_alignStart="@+id/textView_LocationName"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox_isCrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/imageView_pubImage"
        android:layout_toEndOf="@+id/textView_pubDescription"
        android:background="@color/colorPrimaryDark"
        android:buttonTint="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_pub_info"
        android:layout_width="287dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/textView_blackBackground"
        android:layout_marginStart="24dp"
        android:background="#00ffffff" />

</RelativeLayout>